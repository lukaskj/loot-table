{
   "compilerOptions": {
      "target": "ES6",
      "lib": ["es2017", "es7", "es6", "dom"],
      "outDir": "./dist/",
      "sourceRoot": "./src/",
      "rootDir": "./src",
      "module": "CommonJS",
      "sourceMap": true,
      "allowJs": true,
      "checkJs": true,
      "alwaysStrict": true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "esModuleInterop": false,
      "declaration": true,
      "declarationMap": true,
      "resolveJsonModule": false,
      "pretty": false,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "strictNullChecks": true
   },
   "include": [
      "src/**/*.ts"
   ],
   "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "dist"
   ]
}