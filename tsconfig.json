{
   "compilerOptions": {
      "target": "es5",
      "lib": ["es2017", "es7", "es6", "dom"],
      "outDir": "./dist/",
      "module": "CommonJS",
      "sourceMap": true,
      "allowJs": true,
      "checkJs": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "esModuleInterop": true,
      "declaration": true,
      "declarationMap": false,
      "resolveJsonModule": false,
      "pretty": false,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "strict": true,
      "strictNullChecks": true,
      "alwaysStrict": true,
   },
   "include": [
      "src/**/*.ts",
      "test"
   ],
   "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "dist",
   ]
}